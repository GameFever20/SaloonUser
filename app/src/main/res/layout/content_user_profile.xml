<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitish"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="app.saloonuser.craftystudio.saloonuser.UserProfileActivity"
    tools:showIn="@layout/activity_user_profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="0dp"
                app:cardElevation="5dp">

                <TextView
                    android:id="@+id/orderPlacement_saloonName_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginRight="7dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="serif"
                    android:text="PROFILE"

                    android:textAlignment="center"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </android.support.v7.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Profile"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"
                android:layout_weight="1"
                app:cardCornerRadius="4dp"
                app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/userProfile_image_imageview"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:src="@drawable/malefinal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="30dp"
                        android:fontFamily="sans-serif"
                        android:text="Your Name"
                        android:textColor="@color/blackish"
                        android:textSize="10sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/userProfile_name_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="serif"
                        android:text="Your Name"
                        android:textColor="@color/blackish"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/light_black"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Mobile Number"
                        android:textColor="@color/blackish"
                        android:textSize="10sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/userProfile_number_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:text="Mobile Number"
                        android:textColor="@color/blackish"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/light_black"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                    </android.support.v7.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Your Age"
                        android:textColor="@color/blackish"
                        android:textSize="10sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/userProfile_age_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:text="Age"
                        android:textColor="@color/blackish"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="22dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        app:cardBackgroundColor="@color/light_black"
                        app:cardCornerRadius="0dp"
                        app:cardElevation="0dp">

                    </android.support.v7.widget.CardView>

                    `

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:text="Your Gender"
                        android:textColor="@color/blackish"
                        android:textSize="10sp"
                        android:textStyle="normal" />


                    <TextView
                        android:id="@+id/userProfile_gender_textview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="30dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="2dp"
                        android:text="Gender"
                        android:textColor="@color/blackish"
                        android:textSize="16sp"
                        android:textStyle="bold" />


                </LinearLayout>

            </android.support.v7.widget.CardView>


        </LinearLayout>

    </ScrollView>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/colorPrimary"
        android:text="Add Detail"
        android:textColor="@color/white"
        android:id="@+id/userProfile_addDetail_button"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>
